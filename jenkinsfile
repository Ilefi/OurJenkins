pipeline {
    agent any 

    stages {
        stage('Checkout Code') {
            steps {
                // Cette étape permet à Jenkins de récupérer le code du dépôt Git
                git url: 'VOTRE_URL_DE_DEPOT_GIT',
                    branch: 'master' // ou la branche que vous utilisez
            }
        }
        stage('Build') {
            steps {
                echo 'Starting the Build Stage...'
                // Ajoutez ici vos commandes de compilation (ex: sh 'mvn clean install')
            }
        }
    }
}