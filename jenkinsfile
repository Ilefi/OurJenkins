pipeline {
    agent any 
    tools {
        maven 'M2_HOME' 
    }
    stages {
        // Le stage 'Declarative: Checkout SCM' est fait automatiquement par Jenkins
        
        stage('Build & Package (Skip Tests)') {
            steps {
                echo 'Starting the Maven Build Stage, skipping tests...'
                sh 'mvn clean install -DskipTests' 
            }
        }
    }
}